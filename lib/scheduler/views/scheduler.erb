<header class="row">
  <div class="col-md-12">
    <h3>Recurring Jobs</h3>
  </div>
</header>

<div class="container">
  <div class="row">
    
    <div class="col-md-12">
      <table class="table table-striped table-bordered table-white">
        
        <thead>
          <tr>
            <th style="width: 40%" scope="col">Job</th>
            <th style="width: 20%" scope="col">Runs Every</th>
            <th style="width: 20%" scope="col">Next Run</th>
            <th style="width: 20%" scope="col">Actions</th>
          </tr>
        </thead>
        
        <tbody>

          <% unless @jobs.nil? %>
          <% @jobs.each do |job| %>
          <tr>
            <th scope="row"><%= job['class'] %></th>
          </tr>
          <% end %>
          <% else %>
          <tr>
            <td colspan="4" style="text-align: center">No Recurring Jobs</td>
          </tr>
          <% end %>

        </tbody>
    
      </table>
    </div>

  </div>
</div>