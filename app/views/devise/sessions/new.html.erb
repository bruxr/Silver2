<div class="page-header align-center">
  <h2>Sign in to Silver</h2>
</div>

<%= devise_error_messages! %>

<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="form-group"><%= f.label :email, class: 'hidden' %>
  <%= f.email_field :email, autofocus: true, class: 'block-level', placeholder: 'Email' %></div>

  <div class="form-group"><%= f.label :password, class: 'hidden' %>
    <%= f.password_field :password, autocomplete: "off", class: 'block-level', placeholder: 'Password' %></div>

  <div class="form-group row">
    <div class="md-6">
    <% if devise_mapping.rememberable? -%>
      <div class="form-group"><%= f.check_box :remember_me, checked: true, class: 'fancy-checkbox' %> <%= f.label :remember_me %></div>
    <% end %>
    </div>
    <div class="md-6 align-right">
      <%= link_to "Forgot your password?", new_password_path(resource_name) %>
    </div>
  </div>

  <div class="form-buttons"><%= f.submit "Sign in", class: 'btn lg block-level' %></div>

<% end %>
