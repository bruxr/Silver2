<div id="movies">

  <div class="page-header">
  
    <h2>Movies</h2>
    <span>24 Movies are now showing out of 100.</span>
    
  </div>
  
  <div class="media-grid">
    
    {{#each}}
    
      <div class="movie media-item">
        {{#link-to 'movies'}}
          {{#if posterUrl}}
            <div class="thumbnail">
              <img {{bind-attr src=posterUrl}} {{bind-attr alt=title}}>
            </div>
          {{else}}
            <div class="thumbnail no-thumbnail"></div>
          {{/if}}
          <h4 class="movie-title">{{title}}</h4>
          <span class="media-info">{{scheduleCount}} schedules</span>
          <span class="media-info">{{cinemaCount}} cinemas</span>
        {{/link-to}}
      </div>
    
    {{/each}}
    
  </div>

</div>