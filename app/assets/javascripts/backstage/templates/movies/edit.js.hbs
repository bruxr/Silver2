<div class="movie-content editing">
  
  <h2>Editing Movie</h2>
  <a {{action cancelEditing}} href="#" class="close-btn"></a>
  
  <div class="movie-edit-controls">
  
  <div class="form-group">
    <label>
      Title
      {{input value=title class="form-control"}}
    </label>
  </div>
  
  <div class="form-group">
    <label>
      Overview
      {{textarea value=overview rows="6" class="form-control"}}
    </label>
  </div>
  
  <div class="form-group">
    <label>
      Tagline
      {{input value=tagline class="form-control"}}
    </label>
  </div>
  
  <div class="form-group">
    <label>
      Website
      {{input value=website class="form-control"}}
    </label>
  </div>
  
  <div class="form-group">
    <label>
      Trailer
      {{input type="url" value=trailerUrl class="form-control"}}
    </label>
  </div>
  
  <div class="row">
    <div class="col-md-4 form-group">
      <label>
        Runtime<br>
        {{input type="text" value=runtime class="form-control inline" size="4"}} mins
      </label>
    </div>
    <div class="col-md-4 form-group">
      <label>
        MTRCB Rating
        {{view "select" content=mtrcbRatings value=mtrcbRating class="form-control"}}
      </label>
    </div>
    <div class="col-md-4 form-group">
      <label>
        Release Date
        {{input type="date" value=isoReleaseDate class="form-control inline form-date-input"}}
      </label>
    </div>
  </div>
  
  <section>
    
    <h3>Sources</h3>
    
    
    
  </section>
  
  <button {{action 'doneEditing'}} class="btn btn-primary btn-block">Save Changes</button>
  
</div>