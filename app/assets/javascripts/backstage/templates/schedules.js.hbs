<div id="movies">

  <div class="page-header">
  
    <h2>Schedules</h2>
    
  </div>
  
  <div class="schedules-filter row">
    
    <div class="col-md-3">
      <input type="date" class="form-control inline">
    </div>
    
    <div class="col-md-3">
      {{view "select" content=cinemas value="" optionValuePath="content.id" optionLabelPath="content.name" class="form-control"}}
    </div>
    
    <div class="col-md-3">
      {{view "select" content=movies value="" optionValuePath="content.id" optionLabelPath="content.title" class="form-control"}}
    </div>
    
    <div class="col-md-3">
      <button class="btn btn-primary">Filter</button>
    </div>
    
  </div>
  
  <table class="schedules table">
    <thead>
      <tr>
        <th>Movie</th>
        <th>Mall</th>
        <th>Cinema</th>
        <th>Price</th>
        <th>Format</th>
      </tr>
    </thead>
    <tbody>
      {{#each}}
      <tr>
        <th>{{#link-to 'movie' movie}}{{movie.title}}{{/link-to}}</th>
        <td>{{#link-to 'cinema' cinema}}{{cinema.name}}{{/link-to}}</td>
        <td>{{room}}</td>
        <td>{{ticketPrice}}</td>
        <td>{{format}}</td>
      </tr>
      {{/each}}
    </tbody>
  </table>

</div>